<%- include('partials/header') -%>
<section>
  <div class="container mx-auto">
    <div>
      <ul class="flex flex-wrap justify-evenly">
        <% products.forEach(product =>{ %>
        <li class="px-10 py-8 border rounded my-10 shadow-md">
          <div class="border rounded border-gray-500 p-3 pb-4 w-full">
            <i class="fa-regular fa-image"></i>
          </div>
          <h3 class="text-xl font-extrabold pb-2 uppercase">
            <%= product.name %>
          </h3>
          <h3 class="text-blue-600 text-2xl text-center pb-3">
            $<%= product.price %>
          </h3>
          <a
            href="/products/<%= product.id %>"
            class="bg-blue-600 text-white ml-2 p-2 rounded"
            >view</a
          >
          <a
            href="/products/<%= product.id %>/cart"
            class="bg-blue-600 text-white ml-2 p-2 rounded"
            >Add to Cart</a
          >
        </li>
        <% }) %>
      </ul>
    </div>
  </div>
</section>
<%- include('partials/footer') -%>
