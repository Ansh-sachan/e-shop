<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <nav>
      <div class="flex justify-between p-4 bg-white shadow-md">
        <div>
          <h2 class="text-blue-600 text-xl ml-2">e-shop</h2>
        </div>
        <div>
          <a href="/products" class="bg-blue-600 text-white rounded px-4 py-2">
            Show products
          </a>
          <a
            href="/products/new"
            class="bg-blue-600 text-white rounded px-4 py-2 mx-3"
          >
            Add Product <span class="text-xl">+</span>
          </a>
        </div>
      </div>
    </nav>
    <section>
      <ul>
        <% users.forEach(user=>{ %>
        <li class="shadow-md rounded-lg flex justify-between p-4 m-4">
          <div>
            <h3 class="text-blue-600 capitalize font-bold"><%= user.name %></h3>
            <h3>Email : <%= user.email %></h3>
          </div>
          <div>
            <% if(user){ if(user.isBlocked){ %>
            <a
              href="/users/<%= user.id %>/unblock"
              class="bg-green-500 text-white p-2"
              >Unblock</a
            >
            <% }else{ %>
            <a
              href="/users/<%= user.id %>/block"
              class="bg-red-500 rounded text-white p-2"
              >Block</a
            >
            <% } } %>
          </div>
        </li>
        <% }) %>
      </ul>
    </section>
  </body>
</html>
